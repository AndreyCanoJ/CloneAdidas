<script src="{{ 'add.js' |  asset_url }}" defer></script>
{{ 'add.css' | asset_url | stylesheet_tag }}

<div class="producthome-main">
  <h1>{{ section.settings.product_title }}</h1>
  <div class="producthome-card">
    {% for block in section.blocks %}
      {% render "productname-card"
        , data: block.settings %}

    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "producthome",
    "settings": [
      {
        "type": "text",
        "id": "product_title",
        "label": "Titulo seccion",
        "default": "product home"
      }
    ],
    "blocks": [
      {
        "name": "producto",
        "type": "product",
        "limit": 3,
        "settings": [
          {
            "type": "product",
            "id": "product_home",
            "label": "product_home"
          },
          {
            "type": "number",
            "id": "product_number",
            "label": "Numero de Producto",
            "default": 3

          },
          {
            "type": "text",
            "id": "product_text",
            "label": "product_text",
            "default": "product text"
          },
          {
            "type": "image_picker",
            "id": "product_image",
            "label": "product_image"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Agregar",
            "default": "Agregar al carrito"
          },
          {
            "type": "text",
            "id": "button_id",
            "label": "button_id"

          }

        ]
      }
    ],
    "presets": [
      {
        "name": "producthome"
      }
    ]
  }
{% endschema %}